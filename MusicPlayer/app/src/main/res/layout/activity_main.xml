<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context="com.example.nainika.musicplayer.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" This is the homepage where you can choose music based on Songs, Albums, Artists, Playlist"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/images" />

    <Button
        android:id="@+id/Songs"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text3"
        android:gravity="center"
        android:padding="5dp"
        android:text="List of Songs"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Album"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="10dp"
        android:background="@color/text2"
        android:gravity="center"
        android:padding="5dp"
        android:text="Album Details"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Artist"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="10dp"
        android:background="@color/text4"
        android:gravity="center"
        android:padding="5dp"
        android:text="Artists List"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Playlist"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:background="@color/text5"
        android:gravity="center"
        android:padding="5dp"
        android:text="Playlists Created"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Payment activity"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
